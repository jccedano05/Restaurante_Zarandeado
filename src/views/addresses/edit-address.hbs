<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Domicilio</h3>
        </div>
        <div class="card-body">
            <form action="/addresses/edit/{{address.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name='addressName' class="form-control" value="{{address.addressName}}">
                    <!-- extraemos el objeto que le mandamos desde el controller-->
                </div>
                <div class="form-group">
                    <textarea name="street" class="form-control">{{address.street}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="noExt" class="form-control">{{address.noExt}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="noInt" class="form-control">{{address.noInt}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="CP" class="form-control">{{address.CP}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="suburb" class="form-control">{{address.suburb}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="city" class="form-control">{{address.city}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="state" class="form-control">{{address.state}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="reference" class="form-control">{{address.reference}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>