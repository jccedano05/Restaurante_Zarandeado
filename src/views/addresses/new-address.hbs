<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo Domicilio</h3>
        </div>
        <div class="card-body">
            <form action="/addresses/new-address" method="POST">
                <div class="form-group">
                    <input type="text" name="addressName" class="form-control" placeholder="Nombre del Domicilio"
                        autofocus>
                </div>
                <div class="form-group">
                    <textarea name="street" placeholder="Calle" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="noExt" placeholder="Numero Exterior" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="noInt" placeholder="Num. Departamento, Oficina" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="CP" placeholder="Codigo Postal" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="suburb" placeholder="Colonia" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="city" placeholder="Ciudad" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="state" placeholder="Estado" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="reference" placeholder="Referencias" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>